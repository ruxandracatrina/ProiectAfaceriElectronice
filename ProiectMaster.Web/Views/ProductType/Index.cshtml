@model IEnumerable<ProductTypeVM>;

@{ 
    ViewData["Title"] = "Categorii";
}

<div class="row mb-2 mt-2 operationsButtons">
    <div class="col-md-12">
        <a href="/ProductType/New" class="btn btn-new btn-outline-new font-weight-bold mr-2" style="background-color: #7c0a02" color="#e9967a" data-toggle="tooltip" title="New" data-placement="top">
            <span class="fa fa-plus-circle"></span>
        </a>

        <button class="btn btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" style="background-color: #7c0a02" title="Edit" data-placement="top" onclick="ProductType.onEditBtnPress()" >
            <span class="fa fa-edit"></span>
        </button>

        <button type="button" class="btn btn-delete btn-outline-delete font-weight-bold mr-2" style="background-color: #7c0a02" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="ProductType.onDelete()">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>

<table id="table" class="table table-hover table-striped table-dark">
    <thead>
        <tr>
            <th hidden style="background-color: #7c0a02">ID Categorie</th>
            <th style="background-color: #7c0a02">Nume Categorie</th>
        </tr>
    </thead>

    <tbody>

        @foreach(var item in Model)
        { 
            <tr id="@item.Id">
                <td hidden>@item.Id</td>
                <td>@item.Name</td>
            </tr>
         }

    </tbody>

</table>