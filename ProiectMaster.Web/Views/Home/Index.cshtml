@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Acasa";
    var detailsRoute = "/Details/{0}";
}

<div class="row" style=" background-color: lightgray; ">

    @foreach( var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">

                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: #e9967a ">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%" src="~/@product.ImagePath" alt="no image" />

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color: #fa8072 "><b>@product.Price Lei</b></label>
                        </div>
                        <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info" style="background-color: #fa8072; ">Detalii Produs</a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>